{
    "name": "@atomico/vite",
    "description": "configuration for Vite + Atomico, this plugin sets the necessary configuration to use Atomico + Jsx within vite",
    "version": "2.11.1",
    "type": "module",
    "main": "./src/plugin.js",
    "types": "./types/plugin.d.ts",
    "exports": {
        ".": "./src/plugin.js"
    },
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/atomicojs/vite.git"
    },
    "bugs": {
        "url": "https://github.com/atomicojs/vite/issues"
    },
    "homepage": "https://github.com/atomicojs/vite#readme",
    "scripts": {
        "start": "vite --force",
        "types": "tsc",
        "test": "npm run build && vitest run",
        "check:cli": "node src/cli.js example/**/*.{js,ts,jsx,tsx}",
        "build": "rm -rf tests/build  && vite build --outDir tests/build",
        "build:expect": "vite build --outDir tests/expect",
        "prepublishOnly": "npm run types && npm run test"
    },
    "dependencies": {
        "@atomico/exports": "^1.0.0",
        "@atomico/postcss-imported": "^1.2.1",
        "@uppercod/hash": "^1.1.1",
        "@uppercod/template-literals": "^1.1.3",
        "acorn-walk": "^8.2.0",
        "cac": "*",
        "esbuild": "*",
        "magic-string": "*",
        "postcss": "^8.4.17",
        "postcss-load-config": "^4.0.1"
    },
    "devDependencies": {
        "@atomico/postcss-tokens": "^1.7.0",
        "@atomico/react": "^2.6.0",
        "@atomico/tsconfig": "^1.0.0",
        "@types/node": "^18.11.9",
        "fast-glob": "^3.2.11",
        "normalize.css": "^8.0.1",
        "postcss-import": "^14.1.0",
        "typescript": "^5.1.6",
        "vite": "^4.3.9",
        "vitest": "^0.24.1"
    },
    "postcss": {
        "plugins": {
            "postcss-import": {},
            "@atomico/postcss-tokens": {}
        }
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": false,
        "endOfLine": "crlf"
    },
    "bin": {
        "atomico-vite": "./src/cli.js",
        "library": "./src/cli.js"
    }
}
