{
  "name": "@atomico/plugin-vite",
  "description": "configuration for Vite + Atomico, this plugin sets the necessary configuration to use Atomico + Jsx within vite",
  "workspaces": [
    "src/**/*",
    "site"
  ],
  "version": "1.1.1",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/atomicojs/plugin-vite.git"
  },
  "bugs": {
    "url": "https://github.com/atomicojs/plugin-vite/issues"
  },
  "homepage": "https://github.com/atomicojs/plugin-vite#readme",
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "exports": "exports src/plugin.js --exports --types --main plugin",
    "prepublishOnly": "npm run exports"
  },
  "dependencies": {
    "atomico": "latest",
    "magic-string": "latest"
  },
  "devDependencies": {
    "@atomico/exports": "^0.27.0",
    "@types/node": "^17.0.23",
    "typescript": "^4.6.3",
    "vite": "latest"
  },
  "peerDependencies": {
    "atomico": "latest",
    "magic-string": "latest"
  }
}
