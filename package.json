{
  "name": "@atomico/plugin-vite",
  "description": "configuration for Vite + Atomico, this plugin sets the necessary configuration to use Atomico + Jsx within vite",
  "workspaces": [
    "src/**/*",
    "site"
  ],
  "version": "1.2.0",
  "types": "./types.d.ts",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/atomicojs/plugin-vite.git"
  },
  "bugs": {
    "url": "https://github.com/atomicojs/plugin-vite/issues"
  },
  "homepage": "https://github.com/atomicojs/plugin-vite#readme",
  "scripts": {
    "start": "vite",
    "types": "tsc",
    "test": "vitest run",
    "build": "rm -rf tests/build  && vite build --outDir tests/build",
    "build:expect": "vite build --outDir tests/expect",
    "prepublishOnly": "npm run types && npm run build && npm run test"
  },
  "dependencies": {
    "@uppercod/template-literals": "^1.0.0",
    "atomico": "latest",
    "magic-string": "latest"
  },
  "devDependencies": {
    "@atomico/exports": "^0.27.0",
    "@types/node": "^17.0.26",
    "typescript": "^4.6.3",
    "vite": "latest",
    "vitest": "^0.9.4"
  },
  "peerDependencies": {
    "atomico": "latest",
    "magic-string": "latest"
  }
}
